<!DOCTYPE html>

@* One RenderBody and more than RenderSection(For Advertisement) *@

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <div style="width:100%;background-color:yellow;height:30%">
        <h1>Header nav @RenderSection("HeaderAd")</h1>
    </div>

    <div style="width:100%;display:flex;height:50%">
        <div style="width:30%;background-color:yellowgreen;">
            <h1>
                Menu @RenderSection("MenuAd")
            </h1>
        </div>
        <div style="width:60%;background-color:red;">
            <h1>
                @* Any View we call this Layout in it, The View will be in Render Body *@
                @RenderBody()
            </h1>
        </div>
    </div>

    <div style="width:100%;background-color:lightyellow;height:20%">
        <h1>
            Footer @RenderSection("FooterAd", false)
        </h1>
    </div>

</body>
</html>
